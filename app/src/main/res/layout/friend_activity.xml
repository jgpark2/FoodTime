<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend List"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:id="@+id/textView" android:autoText="false"
                android:textSize="@dimen/header_text_size"/>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />
        <Button
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                android:text=" "
                android:background="@drawable/add_people"
                android:id="@+id/but_addFriendList" android:onClick="add_button"/>
    </LinearLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Remove from Friend List "
            android:id="@+id/but_delFriendList"
            android:background="#bb93dc"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/regular_text_size"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/friendListView"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:stackFromBottom="false" android:layout_above="@+id/but_delFriendList"/>

    </RelativeLayout>
    />
</LinearLayout>