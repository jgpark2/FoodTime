<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="0.8">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended Friends:"
                android:id="@+id/tex_recF" android:autoText="false"
                android:textSize="@dimen/header_text_size" android:textIsSelectable="false"/>
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/recommendListView"
                android:layout_below="@+id/tex_recF" android:layout_above="@+id/but_addlist"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Friend List"
                android:layout_alignParentBottom="true"
                android:id="@+id/but_addlist"
                android:textSize="@dimen/regular_text_size"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" android:layout_weight="0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_row="1" android:layout_column="0"
            android:layout_weight="0.2" android:layout_gravity="bottom">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add By FoodTime ID:"
                android:id="@+id/tex_addbyid" android:textSize="@dimen/header_text_size"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText" android:layout_gravity="center_horizontal"
                    android:minWidth="240sp" android:textSize="@dimen/header_text_size" android:textIsSelectable="true"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:id="@+id/buy_addsingle" android:textSize="@dimen/regular_text_size"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>