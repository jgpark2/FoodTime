<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background = "@drawable/burgermask">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome To FoodTime!"
            android:fontFamily="sans-serif-light"
            android:id="@+id/textWelcome" android:layout_gravity="center_horizontal" android:textColor="#000000"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started!"
            android:fontFamily="sans-serif-light"
            android:textSize="18dp"
            android:clickable="true"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="new_user_button"
            android:layout_marginTop="91dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:fontFamily="sans-serif-light"
            android:id="@+id/textOr" android:layout_below="@+id/button" android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Username:"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textUser" android:layout_below="@+id/textOr" android:layout_toLeftOf="@+id/button"
                android:layout_marginTop="66dp" android:textColor="#000000" android:textSize="18dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Password:"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:id="@+id/textView3" android:layout_below="@+id/textUser"
                android:layout_alignStart="@+id/textUser"  android:layout_alignLeft="@+id/textUser"
            android:layout_marginTop="24dp" android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="8"
                android:id="@id/username_input"
                android:layout_alignTop="@+id/textUser" android:layout_marginLeft="6dp" android:layout_toRightOf="@+id/textUser"
                android:textColor="#000000" android:background="#dddddd" android:layout_above="@+id/textView3"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="8"
                android:id="@id/password_input"
                android:layout_alignEnd="@id/username_input"
                android:layout_alignRight="@id/username_input"
                android:textColor="#000000" android:background="#dddddd"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/textView3" android:layout_alignTop="@+id/textView3"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:fontFamily="sans-serif-light"
                android:id="@+id/buttonSubmit"
                android:layout_below="@+id/textView3" android:layout_alignLeft="@id/password_input"
                android:layout_marginTop="28dp" android:layout_alignRight="@+id/button"
                android:textSize="18dp"
                android:onClick="login_button"
                android:clickable="true"/>

    </RelativeLayout>
</LinearLayout>